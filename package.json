{
  "name": "node-backend-template",
  "version": "1.0.0",
  "description": "project-template",
  "main": "index.ts",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha -r ts-node/register ./test/src/**/*.spec.ts",
    "test:watch": "./node_modules/mocha/bin/mocha --watch-extensions ts --watch -r ts-node/register ./test/src/**/*.spec.ts",
    "start": "./node_modules/npm/bin/npm-cli.js run-script build:dev && npm-run-all --parallel watch:dev watch:server",
    "build:dev": "./node_modules/webpack-cli/bin/webpack.js --config pre-compilation.js --mode development",
    "watch:dev": "./node_modules/webpack-cli/bin/webpack.js --config pre-compilation --watch --mode development",
    "watch:server": "cd dist/ && ../node_modules/nodemon/bin/nodemon.js project-name.js",
    "build": "./node_modules/webpack-cli/bin/webpack.js --config pro-compilation.js --mode production",
    "start:prod-cluster": "./node_modules/npm/bin/npm-cli.js run-script build && cd dist/ && ../node_modules/pm2/bin/pm2 start project-name.js -i 0",
    "start:monitor-cluster": "cd dist/ && ../node_modules/pm2/bin/pm2 monit",
    "stop:prod-cluster": "cd dist/ && ../node_modules/pm2/bin/pm2 stop all && ../node_modules/pm2/bin/pm2 delete all"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:murphy_team/node-backend-template.git"
  },
  "author": "Álvaro Gómez Jáuregui, Alicia Fernández Rovira",
  "license": "MIT",
  "homepage": "https://bitbucket.org/murphy_team/node-backend-template",
  "dependencies": {
    "body-parser": "^1.18.2",
    "core-js": "^2.4.1",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "mongodb": "^3.0.4",
    "pm2": "^2.10.2",
    "reflect-metadata": "^0.1.10",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.5",
    "@types/core-js": "^0.9.42",
    "@types/express": "^4.0.39",
    "@types/lodash": "^4.14.85",
    "@types/mocha": "^2.2.44",
    "@types/mongodb": "^3.0.8",
    "@types/node": "^8.0.53",
    "@types/sinon-stub-promise": "^1.1.1",
    "@types/webpack-env": "^1.13.2",
    "@types/xml2js": "^0.4.2",
    "chai": "^4.1.1",
    "clean-webpack-plugin": "^0.1.19",
    "jasmine": "^2.7.0",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-mocha": "^1.1.1",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^3.0.8",
    "karma-webpack": "^2.0.13",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "node": "^9.8.0",
    "nodemon": "^1.17.1",
    "sinon": "^3.2.0",
    "ts-loader": "^4.0.1",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-node-externals": "^1.6.0",
    "npm": "^5.7.1",
    "npm-run-all": "^4.1.2"
  }
}
